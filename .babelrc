{
  "stage": 0,
  "env": {
  	"development": {
  		"plugins": ["react-transform"],
  		"extra": {
  			"react-transform": {
					"transforms": [{
						"transform": "react-transform-hmr",
						"imports": ["react"],
						"locals": ["module"]
					}]
				}
  		}
  	}
  },
  "plugins": [
  	"babel-plugin-module-alias"
  ],
  "extra": {
  	"module-alias": [
  		{ "src": "./src/actions", "expose": "actions" },
  		{ "src": "./src/reducers", "expose": "reducers" },
  		{ "src": "./src/components", "expose": "components" }
  	]
  }
}

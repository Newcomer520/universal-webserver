{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"mocha": true
	},
	"extends": "airbnb",
	"rules": {
		"jsx-quotes": [1, "prefer-double"],
    "jsx-closing-bracket-location": [1, {"selfClosing": "after-props", "nonEmpty": "after-props"}],
    "no-multi-comp": 0,
		"no-trailing-spaces": [2, { "skipBlankLines": true }],
		"semi": [2, "never"],
		"indent": [2, 2, { "SwitchCase": 1 }],
		"quotes": 0,
		"comma-dangle": [2, "never"],
		"camelcase": 0
	},
	"globals": {
		"sinon": true
	},
  "plugins": [
    "react"
  ]
}
// 0: off, 1: warning, 2: error

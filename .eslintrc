{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"mocha": true
	},
	"extends": "airbnb",
	"rules": {
		"jsx-quotes": [1, "prefer-double"],
		"no-trailing-spaces": [2, { "skipBlankLines": true }],
		"semi": [2, "never"],
		"indent": [2, "tab"],
		"quotes": 0,
		"no-trailing-spaces": 0,
		"comma-dangle": [2, "never"],
		"camelcase": 0
	},
	"globals": {
		"sinon": true
	}
}
